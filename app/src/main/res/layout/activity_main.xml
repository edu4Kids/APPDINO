<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_circle">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/gosetBtn"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="39dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/guide4_sb"
                    android:gravity="center"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <Button
                    android:id="@+id/gotoGuide"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="202dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="27dp"
                    android:background="@drawable/main_guide_button"
                    android:gravity="center"
                    android:scaleX="1.5"
                    android:scaleY="1.5" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:elevation="7dp"
                >

                <ImageView

                    android:layout_width="312.4dp"
                    android:layout_height="105.3dp"
                    android:layout_marginLeft="22.4dp"
                    android:layout_marginRight="25.2dp"
                    android:layout_marginTop="45.8dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="5.7dp"
                    android:background="@drawable/shadow"
                    />

                <ImageView
                    android:elevation="7dp"
                    android:layout_width="82dp"
                    android:layout_height="82dp"
                    android:layout_marginLeft="37.6dp"
                    android:layout_marginTop="56.2dp"
                    android:background="@drawable/background_profile" />


                <TextView
                    android:elevation="7dp"
                    android:id="@+id/nicknameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="139.6dp"
                    android:layout_marginTop="73dp"
                    android:lineSpacingExtra="15sp"
                    android:text="text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="#383838"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:elevation="20dp">


                    <Button

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="139.6dp"
                        android:layout_marginTop="90dp"
                        android:background="#00ff0000"
                        android:lineSpacingExtra="3sp"
                        android:text="칭찬스티커"
                        android:textColor="#383838"
                        android:textSize="15sp"
                        android:textStyle="normal">

                    </Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="3sp"
                        android:text="|"
                        android:textColor="#383838"
                        android:textSize="15sp"
                        android:textStyle="normal"></TextView>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:background="#00ff0000"
                        android:lineSpacingExtra="3sp"
                        android:text="캐릭터보기"
                        android:textColor="#383838"
                        android:textSize="15sp"

                        android:textStyle="normal">

                    </Button>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:elevation="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:elevation="5dp"
                    android:layout_width="312.4dp"
                    android:layout_height="210.7dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22.2dp"
                    android:layout_marginTop="9.8dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shadow"
                    />

                <ImageView
                    android:elevation="5dp"
                    android:layout_width="105dp"
                    android:layout_height="122dp"
                    android:layout_marginLeft="197dp"
                    android:layout_marginTop="51.2dp"
                    android:background="@drawable/background_dino">

                </ImageView>

                <TextView
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25.2dp"
                    android:lineSpacingExtra="13sp"
                    android:text="디노와양치하기"
                    android:textColor="#6b548d"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:elevation="5dp"
                    android:id="@+id/brush_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.7dp"
                    android:layout_marginTop="55dp"
                    android:lineSpacingExtra="3sp"
                    android:text="레벨1"
                    android:textColor="#6b548d"
                    android:textSize="18sp"
                    android:textStyle="normal"></TextView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <Button
        android:elevation="5dp"
        android:id="@+id/brush_btn"
        android:layout_width="104.8dp"
        android:layout_height="47.1dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="137.2dp"
        android:layout_marginBottom="26.4dp"
        android:background="@drawable/background_button_sino"
        android:lineSpacingExtra="5sp"
        android:text="시작"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"></Button>

</LinearLayout>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <ImageView
                    android:elevation="5dp"
                    android:layout_width="312.4dp"
                    android:layout_height="210.7dp"
                   android:layout_marginRight="22.2dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="17.1dp"
                    android:layout_marginBottom="36.7dp"
                    android:background="@drawable/shadow" />

                <ImageView
                    android:elevation="5dp"
                    android:layout_width="104.8dp"
                    android:layout_height="137.4dp"
                    android:layout_marginLeft="197dp"
                    android:layout_marginTop="39.3dp"
                    android:background="@drawable/background_sino">

                </ImageView>

                <TextView
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="27.4dp"
                    android:lineSpacingExtra="13sp"
                    android:text="시노와 식사하기"
                    android:textColor="#ae5c1a"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:elevation="5dp"
                    android:id="@+id/eating_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.7dp"
                    android:layout_marginTop="55dp"
                    android:lineSpacingExtra="3sp"
                    android:text="레벨1"
                    android:textColor="#ae5c1a"
                    android:textSize="18sp"
                    android:textStyle="normal"></TextView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <Button
        android:id="@+id/eating_btn"
        android:layout_width="104.8dp"
        android:layout_height="47.1dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="137.4dp"
        android:background="@drawable/background_button_dino"
        android:lineSpacingExtra="5sp"
        android:text="시작"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"></Button>

</LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>