<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/gosetBtn"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/setting_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <Button
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/button_background"
                android:layout_marginTop="28dp"
                android:layout_marginRight="27dp"
                android:layout_marginLeft="202dp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="312.4dp"
                android:layout_height="105.3dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="45.8dp"
                android:background="@drawable/main_back1"/>

            <ImageView
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginLeft="37.6dp"
                android:layout_marginTop="56.2dp"
                android:background="@drawable/exampleimg"/>


            <TextView
                android:id="@+id/nicknameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#383838"
                android:lineSpacingExtra="15sp"
                android:text="text"
                android:layout_marginLeft="139.6dp"
                android:layout_marginTop="73dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:text="칭찬스티커"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#383838"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginLeft="139.6dp"
                    android:layout_marginTop="90dp">

                </Button>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#383838"
                    android:lineSpacingExtra="3sp"
                    android:layout_marginTop="90dp"
                    android:text="|">
                </TextView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:text="캐릭터보기"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#383838"
                    android:lineSpacingExtra="3sp"

                    android:layout_marginTop="90dp">

                </Button>


            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="312.4dp"
                android:layout_height="210.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="29.8dp"
                android:background="@drawable/main_back1"/>

            <ImageView
                android:layout_width="105dp"
                android:layout_height="122dp"
                android:layout_marginLeft="197dp"
                android:layout_marginTop="81dp"
                android:background="@drawable/main_char1">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="디노와양치하기"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#6b548d"
                android:lineSpacingExtra="13sp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="50dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레벨1"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#6b548d"
                android:lineSpacingExtra="3sp"
                android:layout_marginTop="84.8dp"
                android:layout_marginLeft="50.7dp"
                android:id="@+id/brush_level"
                >
            </TextView>


            <Button
                android:layout_width="104.8dp"
                android:layout_height="47.1dp"
                android:text="시작"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="5sp"
                android:background="@drawable/main_btnc"
                android:layout_marginTop="167dp"
                android:layout_marginLeft="52dp"
                android:id="@+id/brush_btn"
                >
            </Button>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="312.4dp"
                android:layout_height="210.7dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="27.1dp"
                android:layout_marginBottom="36.7dp"

                android:background="@drawable/main_back1"/>

            <ImageView
                android:layout_width="105dp"
                android:layout_height="122dp"
                android:layout_marginLeft="197dp"
                android:layout_marginTop="81dp"
                android:background="@drawable/main_char1">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시노와 식사하기"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ae5c1a"
                android:lineSpacingExtra="13sp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="50dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레벨1"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="#ae5c1a"
                android:lineSpacingExtra="3sp"
                android:layout_marginTop="84.8dp"
                android:layout_marginLeft="50.7dp"
                android:id="@+id/eating_level"
                >
            </TextView>


            <Button
                android:layout_width="104.8dp"
                android:layout_height="47.1dp"
                android:text="시작"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="5sp"
                android:background="@drawable/main_btnc1"
                android:layout_marginTop="167dp"
                android:layout_marginLeft="52dp"
                android:id="@+id/eating_btn"
                >
            </Button>


        </RelativeLayout>







    </LinearLayout>




</RelativeLayout>
    </ScrollView>