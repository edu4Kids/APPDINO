<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView

        android:id="@+id/storytelling_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/storytelling_background"
        android:scaleType="center"
        android:scaleX="3.5"
        android:scaleY="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/baby"
        android:layout_width="200.7dp"
        android:layout_height="127.6dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="251dp"
        android:src="@drawable/baby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/storytelling_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611" />

    <ImageView
        android:id="@+id/baby_said"
        android:layout_width="272.2dp"
        android:layout_height="180.2dp"
        android:layout_marginStart="43.9dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="43.9dp"
        android:layout_marginBottom="394dp"
        android:src="@drawable/baby_said"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/storytelling_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>