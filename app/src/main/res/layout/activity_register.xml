<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity"
    android:background="#ede3fe">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="70dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="59dp"
        android:layout_marginTop="71dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="15dp"
            android:text="디노와 시노\n간편 회원가입"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="3sp"
            android:text="아이디"
            />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginBottom="5dp"
            android:elevation="2dp"
            android:id="@+id/idText"
            android:layout_marginTop="3dp"
            android:layout_width="291dp"
            android:layout_height="45dp"
            android:background="@drawable/rec_shape"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp"
            android:ems="10"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/validateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="219dp"
            android:layout_marginRight="71dp"
            android:text="아이디확인"
            android:background="#00ff0000"
            app:layout_constraintStart_toEndOf="@+id/idText" />


        />

</RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="3sp"
            android:text="비밀번호"



            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >
        <EditText
            android:elevation="2dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/passwordText"
            android:layout_width="291dp"
            android:layout_height="45dp"
            android:background="@drawable/rec_shape"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp"
            android:ems="10"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_marginBottom="5dp"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="3sp"
            android:text="닉네임"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        >
        <EditText
            android:id="@+id/nicknameText"
            android:layout_width="291dp"
            android:layout_height="45dp"
            android:background="@drawable/rec_shape"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp"
            android:ems="10"
            android:paddingLeft="20dp"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="54dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"
            android:letterSpacing="-0.05"
            android:lineSpacingExtra="3sp"
            android:text="나이"
            />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
       >
        <EditText
            android:layout_marginBottom="5dp"
            android:elevation="2dp"
            android:id="@+id/ageText"
            android:layout_width="291dp"
            android:layout_height="45dp"
            android:background="@drawable/rec_shape"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="34dp"
            android:ems="10"
            android:paddingLeft="20dp"
          />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_centerVertical="true"
        android:paddingLeft="35dp"
        >

            <Button
                android:id="@+id/registerButton"
                android:layout_width="291dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:text="다음"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:letterSpacing="-0.05"
                android:lineSpacingExtra="25sp"
                android:background="@drawable/prec_shape"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>



















